{
  "name": "test-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/test-utils/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:testing"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/testing/test-utils",
        "main": "testing/test-utils/src/index.ts",
        "tsConfig": "testing/test-utils/tsconfig.lib.json",
        "assets": ["testing/test-utils/*.md"],
        "generatePackageJson": true,
        "format": ["esm"]
      }
    },
    "test": {
      "outputs": [
        "{projectRoot}/{options.coverage.reportsDirectory}",
        "{workspaceRoot}/coverage/projects/test-utils"
      ],
      "options": {
        "coverage.reportsDirectory": "../../coverage/testing/test-utils"
      }
    }
  }
}
